<Window x:Class="Dogs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dogs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Which dog breed are you searching for?" HorizontalAlignment="Left" Height="33" Margin="39,72,0,0" VerticalAlignment="Top" Width="230"/>
        <Label Content="Dog Picture App" HorizontalAlignment="Left" Height="41" Margin="303,24,0,0" VerticalAlignment="Top" Width="169" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="txtDogBreed" HorizontalAlignment="Left" Height="21" Margin="67,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136"/>
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Height="24" Margin="83,149,0,0" VerticalAlignment="Top" Width="84" Click="btnSearch_Click" IsDefault="True"/>
        <Image x:Name="picDog" HorizontalAlignment="Left" Height="221" Margin="415,88,0,0" VerticalAlignment="Top" Width="321"/>
        <ListBox x:Name="lstTest" HorizontalAlignment="Left" Height="158" Margin="83,217,0,0" VerticalAlignment="Top" Width="275"/>

    </Grid>
</Window>
